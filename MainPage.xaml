<Page
    x:Class="Bubbles.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Bubbles"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>

        <DataTemplate x:Key="bubbleTemplate">
            <Canvas>
                <!-- Work with the colours scheme, but the general idea is that lower "gas pressure" makes the colour fade, 
                     but leaving a faint shadow and a border. -->
                <Ellipse Fill="Red" Stroke="WhiteSmoke" Height="{Binding Size.Height}" Width="{Binding Size.Width}" Opacity="{Binding GasPressure}"/>
                <Ellipse Fill="White" Opacity="0.2" Height="{Binding Size.Height}" Width="{Binding Size.Width}" />
                <Ellipse Stroke="WhiteSmoke"  Height="{Binding Size.Height}" Width="{Binding Size.Width}" />
            </Canvas>
        </DataTemplate>

        <!-- TODO: Maybe define "exploding" "sprites" here? -->
        <DataTemplate x:Key="someOtherTemplate">
            <Ellipse Fill="WhiteSmoke" Width="30" Height="30"/>
            <!--         
            <Ellipse Fill="Green" Stroke="Black" Height="{Binding Size.Height}" Width="{Binding Size.Width}" Opacity="{Binding GasPressure}"/>
-->
        </DataTemplate>
        <local:GameObjectTemplateSelector x:Key="gameObjectTemplate" CustTemplate="{StaticResource someOtherTemplate}" BubbleTemplate="{StaticResource bubbleTemplate}"/>



    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ItemsControl ItemsSource="{Binding GameObjects}" x:Name="GameArea" ItemTemplateSelector="{StaticResource gameObjectTemplate}">
        
            <ItemsControl.ItemContainerStyle>
                <Style TargetType="ContentPresenter">
                    <Setter Property="Canvas.Left" Value="{Binding X}"/>
                    <Setter Property="Canvas.Top" Value="{Binding Location.Y}"/>
                </Style>
            </ItemsControl.ItemContainerStyle>
            
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
 
        </ItemsControl>
    </Grid>
</Page>
